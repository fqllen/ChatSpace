.main-header
  = link_to edit_group_path(@group) do
    .main-header__box--edit Edit
  .main-header__box
    %h2.main-header__box__title{"data-group-id": "#{@group.id}"}
      = @group.name
    %ul.main-header__box__member
      Member:
      %li.member
        - @group.group_users.each do |group_user|
          = group_user.user.name
